<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Results Info</h1>
</div>

<div class="card shadow-sm p-1">
    <div class="card-body p-1">
        <table id="resultsTable" class="table table-striped table-hover" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Home Team</th>
                    <th scope="col">Away Team</th>
                    <th scope="col">Home Score</th>
                    <th scope="col">Away Score</th>
                </tr>
            </thead>
            <tbody>
                <!-- DataTables will populate here -->
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#resultsTable').DataTable({
            ajax: {
                url: '@Url.Action("GetArsenalRecentResults", "Players")',
                dataSrc: ''
            },
            columns: [
                {
                    data: 'utcDate',
                    render: function(data, type, row) {
                        if (!data) return '';

                        var dt = new Date(data);

                        var datePart = dt.toLocaleDateString('en-GB', {
                            day: '2-digit', month: '2-digit', year: 'numeric'
                        });
                        var timePart = dt.toLocaleTimeString('en-GB', {
                            hour: '2-digit', minute: '2-digit', hour12: false
                        });
                        var display = datePart + ' ' + timePart;

                        // For display and filter, return the human string
                        if (type === 'display' || type === 'filter') {
                            return display;
                        }

                        // For sort/order/type return a machine-friendly value 
                        return dt.getTime();
                    }
                },
                { data: 'homeTeamName' },
                { data: 'awayTeamName' },
                {
                    data: 'homeScore',
                    render: d => d !== null ? d : '-'
                },
                {
                    data: 'awayScore',
                    render: d => d !== null ? d : '-'
                }
            ],
            responsive: true,
            paging: true,
            pageLength: 10,
            lengthMenu: [ [5, 10, 25, 50, 100], [5, 10, 25, 50, 100] ],
            order: [[0, 'desc']], // sort by date descending
            language: {
                emptyTable: "No match results available",
                loadingRecords: "Loading match results..."
            }
        });
    });
</script>
